{
  "compilerOptions": {
    "target": "ES5", /* Target ES5 for broader compatibility */
    "outDir": "./dist", /* Output transpiled code here */
    "module": "commonjs", /* Suitable for Node.js */
    "strict": true, /* Enforce type safety */
    "esModuleInterop": true, /* Improves import compatibility */
    "declaration": true, /* Generate .d.ts type files */
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules"
  ]
}
